<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colours.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="ThemeForegroundBrush"
                     Color="{StaticResource ThemeForegroundColour}" />
    <SolidColorBrush x:Key="ThemeBackgroundBrush"
                     Color="{StaticResource ThemeBackgroundColour}" />
    <SolidColorBrush x:Key="ThemeHighlightBackgroundBrush"
                     Color="{StaticResource ThemeHighlightBackgroundColour}" />
    <SolidColorBrush x:Key="ThemeHighlightForegroundBrush"
                     Color="{StaticResource ThemeHighlightForegroundColour}" />
</ResourceDictionary>
